@import "variable.styl"

body, html
  line-height: 1
  height: 100%
  font-family: 'YouYuan,Arial,Microsoft YaHei,黑体,宋体,sans-serif';
  user-select: none
  -webkit-tap-highlight-color: transparent
  background: $color-background
  color: $color-text

html{
    font-size: 50px;
}
$no=15
@media screen and (min-width:320px) {

    html {
        font-size: (320 / $no)px;
    }
}

@media screen and (min-width:360px) {
    html {
        font-size: (360 / $no)px;
    }
}
@media screen and (min-width:375px){
    html {
        font-size: (375 / $no)px;
    }
}
