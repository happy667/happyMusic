// 颜色定义规范
$color-common=#FD4979
$color-common-x=#23203f
$color-common-b=#b0b0b0
$color-common-background=#fff
// 字体定义规范
$font-size-smaller-x = .35rem
$font-size-smaller = .4rem
$font-size-small-x = .45rem
$font-size-small = .55rem
$font-size-large-x = .6rem
$font-size-large = .65rem
// 背景图片
$baImage=url('./assets/images/bgImages/bg1.jpg');
// 字体样式
$font-common='Roboto'
$font-common-title='sans-serif'
// 背景图片
bg-image($url)
  background-image: url($url + "@2x.png")
  @media (-webkit-min-device-pixel-ratio: 3),(min-device-pixel-ratio: 3)
    background-image: url($url + "@3x.png")

// 不换行
no-wrap()
  text-overflow: ellipsis
  overflow: hidden
  white-space: nowrap
  //超过两行换
no-wrap2(){
    display: -webkit-box;
    -webkit-line-clamp: 2;
    overflow: hidden;
    text-overflow: ellipsis;
    -webkit-box-orient: vertical;
}
  //超过三行换
no-wrap3(){
    display: -webkit-box;
    -webkit-line-clamp: 3;
    overflow: hidden;
    text-overflow: ellipsis;
    -webkit-box-orient: vertical;
}
roundImg(){
   display: block;
   width: 100%;
   height: 100%;
   border-radius: 50%;
}
// 扩展点击区域
extend-click()
  position: relative
  &:before
    content: ''
    position: absolute
    top: -10px
    left: -10px
    right: -10px
    bottom: -10px




 
