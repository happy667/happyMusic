@import "./variable.styl"
.van-nav-bar .van-icon,.van-nav-bar__title{
  color: $color-common!important;
}
.van-hairline--top-bottom::after, .van-hairline-unset--top-bottom::after{
  border-width: 0 0 .03rem 0 !important;
} 

.van-tabs__wrap {
  
  height: 1.18rem !important;
}
.van-tab{
  font-size:$font-size-smaller !important;
}
.van-nav-bar__title{
  font-size:$font-size-smaller !important;
}
.van-field{
  font-size:$font-size-smaller-x !important;
 }
 .van-tabs__line{
   z-index:0 !important;
}

 html,body{
  position: absolute;
  top:0;
  left:0;
  width :100%;
  height: 100%;
  z-index:1;
  user-select: none;
  -webkit-tap-highlight-color: transparent;
  color: $color-common-x;
  overflow: scroll;
  overflow-scrolling: touch;
  -webkit-overflow-scrolling: touch;//这个属性可以实现，手指离开屏幕会惯性滑动一段距离
  
}



